<main>
  <h1 class="action-header">Register</h1>

  <div class="container">
    <div class="row">
      <div class="form">
          <%= form_for(@user,  :url => "register",  :html => {class: "form-horizontal", role: "form",  method: "post"}) do |f| %>
              <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
              <%= f.text_field :mobile, class: "form-control", placeholder: "Mobile Number" %>
              <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
              <%= f.submit "Register", class: "btn btn-success" %>
          <% end %>


      </div>
    </div>
  </div>
</main>
